version: '3.8'

services:
  # MySQL 数据库
  mysql:
    image: mysql:8.0
    container_name: mysql_recommendation
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: 12345678
      MYSQL_DATABASE: resource_recommendation
      MYSQL_USER: appuser
      MYSQL_PASSWORD: apppassword
      MYSQL_DEFAULT_AUTHENTICATION_PLUGIN: mysql_native_password
    ports:
      - "13306:3306"
    volumes:
      - mysql_data:/var/lib/mysql
      - ./init.sql:/docker-entrypoint-initdb.d/init.sql
    networks:
      - backend_network
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u", "root", "-p12345678"]
      interval: 10s
      timeout: 5s
      retries: 10
      start_period: 30s

  # 后端服务
  backend:
    image: recommendation_backend:latest
    container_name: recommendation_backend
    restart: unless-stopped
    ports:
      - "8082:8000"
    environment:
      DATABASE_URL: mysql+asyncmy://appuser:apppassword@mysql:3306/resource_recommendation
      ENVIRONMENT: docker
      PYTHONPATH: /app
    depends_on:
      mysql:
        condition: service_healthy
    networks:
      - backend_network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3

volumes:
  mysql_data:

networks:
  backend_network:
    driver: bridge